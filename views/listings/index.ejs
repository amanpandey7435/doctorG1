<% layout('/layouts/boilerplateCode.ejs') -%>

    <div class="main">
      <div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1">
        <%for(let doctor of doctors){%>
            
                
                  <div class="card" style="width: 25rem;margin:1rem;">
                    <img src="<%=doctor.image%>" class="card-img-top" alt="...">
                    <div class="card-body">
                      <h5 class="card-title"><%=doctor.name%></h5>
                      <p class="card-text"><%=doctor.specializations%></p>
                      <a href="<%=doctor._id%>" class="btn btn-primary">Visit Profile</a>
                    </div>
                  </div>
                
            
        <%}%>
        </div>
    </div>



